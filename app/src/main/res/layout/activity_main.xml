<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="mobile.cenocloud.com.ceno.MainActivity">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/fragment_container"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#d3d3d3"/>
        <LinearLayout
            android:id="@+id/bottom_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal"
            android:background="#f3f3f3">
            <LinearLayout
                android:id="@+id/bottom_bt_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/bottom_bt_home_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/bottom_bt_home_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#aaa"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:text="@string/bt_home"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_bt_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/bottom_bt_app_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/application"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/bottom_bt_app_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#aaa"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/bt_app"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_bt_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/bottom_bt_shop_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/bottom_bt_shop_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#aaa"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:text="@string/bt_shop"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_bt_self"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/bottom_bt_self_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/my"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/bottom_bt_self_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#aaa"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/bt_my"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


